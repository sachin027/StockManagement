@model List<Sachin_452_Models.DBContext.orders>
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Price</th>
            <th>Product ID</th>
            <th>Total Price</th>
            <th>Supplier ID</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.price</td>
                <td>@order.ProductId</td>
                <td>@order.total</td>
                <td>@order.UserId</td>
                <td>@order.orderDate</td>
            </tr>
        }
    </tbody>
</table>
